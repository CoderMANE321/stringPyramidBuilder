#include <iostream>

using namespace std;


class MyClass {        
  public:              
    void myMethod(string sym) 
    {  
      for (int i = 1; i < 8; i++) 
            {
                
               for(int j = 1; j <= i; j++)
               {
                  
                  cout << sym;
                  sym + sym;
               }
               
               cout << "\n"; 
            }
            
    }
};

int main() {
  string sym = "*";    
  MyClass myObj;     
  myObj.myMethod(sym); 
  return 0;
}
